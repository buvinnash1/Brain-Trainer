<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FCC83F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.something.vinot.braintrainer.splashscreen"
    tools:showIn="@layout/activity_splashscreen">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button2"
        android:text="Brain Trainer"
        android:textAlignment="center"
        android:textColor="#112333"
        android:textSize="35dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="221dp"
        android:layout_height="236dp"

        android:layout_marginBottom="136dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/additionbutton"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="116dp"
            android:layout_marginRight="200dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_button"
            android:onClick="addition"
            android:text="Addition Trainer"
            android:textColor="#112233"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="221dp" />

        <Button
            android:id="@+id/subtractionbutton"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_button"
            android:onClick="subtraction"
            android:text="Subtraction Trainer"
            android:textColor="#112233"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="221dp" />

        <Button
            android:id="@+id/multiplicationbutton"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_button"
            android:text="Multiplication Trainer"
            android:textColor="#112233"
            app:layout_constraintTop_toBottomOf="@+id/subtractionbutton"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="221dp" />

        <Button
            android:id="@+id/randomtrainer"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_button"
            android:text="Mixed Trainer"
            android:textColor="#112233"
            app:layout_constraintTop_toBottomOf="@+id/subtractionbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="105dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="223dp"
        android:layout_height="180dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@mipmap/brainliftingweight" />  /* brainliftingeweight7 is the best one*/
</android.support.constraint.ConstraintLayout>
